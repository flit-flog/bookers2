<div class="container px-5">
  <div class="row pt-3">
      <div class="col-md-3">
        
        
        <%= render 'user' , book: @book ,user: @user %>
      
        

        
      </div>
      <div class="col-md-8 offset-md-1 ">
        <h2>Users</h2>
        <table class="table">
            <tr>
                <th></th>
                <th>image</th>
                <th>name</th>
            </tr>
            <% @users.each do |user| %>
            <tr>
                <td>
                    <%= image_tag user.get_profile_image(80,80) %>
                </td>
                <td>
                        <%= user.name %>
                </td>
                <td><%= link_to "Show", user_path(user.id)  %></td>
            </tr>
            <% end %>
        </table>
      </div>
  </div>  
</div>