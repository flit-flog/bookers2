<div class="container">
  <div class="row">
      <div class="col-3">
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
            <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
            </tr>
        </table>
 
           
        
            <a class="btn btn-outline-secondary btn-md btn-block" href="/users/#{current_user.id}/edit" role= "button">
            <i class="fa-solid fa-user-gear"></i>
            </a>
        
        
      
        

        <h2 class="my-3">New book</h2>
        <%=form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p class="mt-3">Opinion</p>
            <%= f.text_area :body %>
            <br>
            
            <%= f.submit 'Create Book',class: 'btn btn-md btn-success' %>
        <% end %>
      </div>
      <div class="col-8">
        <h2>Books</h2>
        <table class="table">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
            <tr>
                <td>
                    <%= link_to user_path(book.user_id) do%>
                        <%= image_tag book.user.get_profile_image(80,80) %>
                    <%end%>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
        </table>
      </div>
  </div>  
</div>

