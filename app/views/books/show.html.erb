<div class="container">
  <div class="row">
      <div class="col-3">
        <h2>User info</h2>
        <%= image_tag @book_detail.user.get_profile_image(100,100) %>
        <table class="table">
            <tr>
                <th>name</th>
                <th><%= @book_detail.user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @book_detail.user.introduction %></th>
            </tr>
        </table>
 
           
        
            <a class="btn btn-outline-secondary btn-md btn-block" href="/users/#{current_user.id}/edit" role= "button">
            <i class="fa-solid fa-user-gear"></i>
            </a>
        
        
      
        

        <h2 class="my-3">New book</h2>
        <%=form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p class="mt-3">Opinion</p>
            <%= f.text_area :body %>
            <br>
            
            <%= f.submit 'Create Book',class: 'btn btn-md btn-success' %>
        <% end %>
      </div>
      
      <div class="col-8">
        <h2>Book detail</h2>
        <table class="table">
            <tr>
                <td>
                    <%= link_to user_path(@book_detail.user_id) do%>
                        <%= image_tag @book_detail.user.get_profile_image(80,80) %>
                        <br>
                        <%= @book_detail.user.name %>
                    <%end%>
                </td>
                <td>
                    <%= link_to book_path(@book_detail.id) do %>
                        <%= @book_detail.title %>
                    <% end %>
                </td>
                <td><%= @book_detail.body %></td>
                <td>
                    <%= link_to "Edit", edit_book_path(@book_detail.id) ,class: "btn btn-success" %>
                </td>
                <td>
                    <%= link_to "Destroy", book_path(@book_detail.id), data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-danger" %>
                </td>
            </tr>
        </table>
      </div>
  </div>  
</div>

